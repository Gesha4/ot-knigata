//Напишете израз, който изчислява площта на трапец по дадени a, b и h.
import java.util.Scanner;
public class LQLQ {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Въведете едната страна на трапеца:");
		float a = sc.nextFloat();
		System.out.println("Въведете другата страна на трапеца:");
		float b = sc.nextFloat();
		System.out.println("Въведете височината на трапеца");
		float h = sc.nextFloat();
		float s=((a+b)/2)*h;
		System.out.println("Лицето е: "+s);

	}

}
